{% extends 'components/dashboard.twig' %}

{% block head %}{% endblock %}

{% block dashboard %}
	<div class="card">
		<div class="card-datatable table-responsive pt-0">
			<div class="card-header">
				<h3 class="card-title">{{ lang('Pages.AdminArea.Pages.Logs.List.Title') }}</h3>
				<p class="card-subtitle text-muted">{{ lang('Pages.AdminArea.Pages.Logs.List.Description') }}</p>
			</div>
			<table class="datatables-basic table">
				<thead>
					<tr>
						<th>{{ lang('Pages.AdminArea.Pages.Logs.List.Table.Head.Columns.ID') }}</th>
						<th>{{ lang('Pages.AdminArea.Pages.Logs.List.Table.Head.Columns.Type') }}</th>
						<th>{{ lang('Pages.AdminArea.Pages.Logs.List.Table.Head.Columns.Severity') }}</th>
						<th>{{ lang('Pages.AdminArea.Pages.Logs.List.Table.Head.Columns.Message') }}</th>
						<th>{{ lang('Pages.AdminArea.Pages.Logs.List.Table.Head.Columns.Date') }}</th>
					</tr>
				</thead>
				<tbody>
					{% for log in logs %}
						<tr>
							<td>{{log.id }}</td>
							<td>{{log.l_type}}</td>
							<td>{{log.levels}}</td>
							<td>{{log.message}}</td>
							<td>{{log.date}}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div><br>{% endblock %}{% block footer %}
{% include 'requirements/datatables.twig' %}
 <script>$(document).ready(function() {$('.datatables-basic').DataTable({responsive: true,pageLength: 10,lengthMenu: [5, 10, 25, 50, 75, 100]});});</script>{% endblock %}
